version: "3"
services:
  web:
    build: reverse-proxy/
    volumes:
      - "./ssl:/etc/nginx/ssl"
    depends_on:
      - backend
      - frontend
      - files
    ports:
      - 443:443
  frontend:
    build: 
      context: frontend/
      dockerfile: Dockerfile.dev
  backend:
    build:
      context: backend/
      dockerfile: Dockerfile.dev
    volumes:
      - "./backend/target/server.war:/usr/local/tomcat/webapps/ROOT.war"
    ports:
      - "8000:8000"
    environment:
      # y: wait for debugger to connect, n: run immediately
      JPDA_SUSPEND: n
  files:
    build: music-server/
